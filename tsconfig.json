{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "paths": {
      "@/*": ["*"], // <== Example: @/routes/index â†’ src/routes/index.ts
      "@controllers/*": ["controllers/*"], // optional: alias for src/controllers
      "@utils/*": ["utils/*"] // optional: alias for src/utils
    },
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts"]
}
